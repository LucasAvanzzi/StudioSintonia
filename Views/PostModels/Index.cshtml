                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioModel.UsuarioModelId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostModelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostModelId">Details</a> |
