@model StudioSintoniaPreview.Models.PostModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PostModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="PostModels" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagId" class="control-label"></label>
                <input asp-for="TagId" class="form-control" />
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioModelId" class="control-label"></label>
                <input asp-for="UsuarioModelId" value="1" class="form-control" />

                @* <select asp-for="UsuarioModelId" class ="form-control" asp-items="ViewBag.UsuarioModelId" value="1"></select> *@
            </div>
            <div class="form-group">
                <label>Escolha seu arquivo</label>
                <input type="file" name="arquivo"
                <br />
                <button type="submit" class="btn btn btn-danger">Enviar arquivo</button>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curtidas" class="control-label"></label>
                <input asp-for="Curtidas" class="form-control" />
                <span asp-validation-for="Curtidas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
