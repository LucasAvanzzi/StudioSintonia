@model UsuarioModel
@{
    ViewData["Title"] = "Criar Usuário";
}


<head>
    <link rel="stylesheet" href="~/css/Styles.css" />
</head>

<div class="container">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Cadastrar Usuário</h1>
        </div>
        <form asp-controller="Usuario" asp-action="Criar" method="post" class="user-form">
            <div class="form-group">
                <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome">
                <label for="nome" class="form-label">Nome</label>
                <i class="material-icons form-icon">person</i>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control" id="email" placeholder="E-mail">
                <label for="email" class="form-label">E-mail</label>
                <i class="material-icons form-icon">email</i>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Celular" class="form-control" id="celular" placeholder="Celular">
                <label for="celular" class="form-label">Celular</label>
                <i class="material-icons form-icon">phone</i>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Profissao" class="form-control" id="profissao" placeholder="Profissão">
                <label for="profissao" class="form-label">Profissão</label>
                <i class="material-icons form-icon">work</i>
            </div>
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
        </form>
    </div>
</div>
