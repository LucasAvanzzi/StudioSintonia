@model IEnumerable<StudioSintoniaPreview.Models.Comentario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioModelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPostagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioModelId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPostagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComentarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ComentarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ComentarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
