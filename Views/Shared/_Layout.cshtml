<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Studio_Sintonia</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Styles.css" />
    <link rel="stylesheet" href="~/css/Player.css" />
    <link rel="stylesheet" href="~/css/Perfil.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <!-- Barra Lateral -->
                <aside>
                    <div class="toggle">
                        <div class="logo">
                            @* <img src="~/lib/Studio Sintonia.png" /> *@
                            <h2>Studio<span class="danger">Sintonia</span></h2>
                        </div>
                    </div>
                    <div class="sidebar">
                        <a class="nav-link" asp-controller="PostModels" asp-action="Feed">
                            <i class="fas fa-home"></i>
                            <h3>Feed</h3>
                        </a>
                        <a class="nav-link" asp-controller="PostModels" asp-action="Index">
                            <i class="fas fa-user"></i>
                            <h3>Perfil</h3>
                        </a>
                        <a class="nav-link" asp-controller="PostModels" asp-action="Curtidas">
                            <i class="fas fa-heart"></i>
                            <h3>Curtidas</h3>
                        </a>
                        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                            <i class="fas fa-chart-bar"></i>
                            <h3>Analytics</h3>
                        </a>
                        @*                         <a class="nav link" asp-controller="UsuarioModels" asp-action="Index">
                        <i class="fas fa-sign-out-alt"></i>
                        <h3>Logout</h3>
                        </a> *@

                        <partial name="_LoginPartial.cshtml" />

                    </div>

                </aside>
            </div>
            <div class="col-sm-10">

                @RenderBody()

            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
