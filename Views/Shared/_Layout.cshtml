<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Studio_Sintonia</title>
    <link rel="stylesheet" href="~/css/Styles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <!-- Barra Lateral -->
                <aside>
                    <div class="toggle">
                        <div class="logo">
                            <img src="~/lib/Studio Sintonia.png" />
                            <h2>Studio<span class="danger">Sintonia</span></h2>
                        </div>
                        <div class="close" id="close-btn">
                            <span class="material-symbols-outlined">
                                close
                            </span>
                        </div>
                    </div>
                    <div class="sidebar">
                        <a href="#">
                            <span class="glyphicon glyphicon-dashboard"></span>
                            <h3>Feed</h3>
                        </a>
                        <a class="nav-link" asp-controller="Perfil" asp-action="Index">
                            <span class="glyphicon glyphicon-user"></span>
                            <h3>Usuario</h3>
                        </a>
                        <a class="nav-link" asp-controller="Perfil" asp-action="Index">
                            <span class="glyphicon glyphicon-heart"></span>
                            <h3>Curtidas</h3>
                        </a>
                        <a href="#">
                            <span class="glyphicon glyphicon-stats"></span>
                            <h3>Analytics</h3>
                        </a>
                        <a href="#">
                            <span class="glyphicon glyphicon-envelope"></span>
                            <h3>Solicitações</h3>
                            <span class="message-cont"></span>
                        </a>
                        <a href="#">
                            <span class="glyphicon glyphicon-list-alt"></span>
                            <h3>Vendas</h3>
                        </a>
                        <a href="#">
                            <span class="glyphicon glyphicon-cog"></span>
                            <h3>Configurações</h3>
                        </a>
                        <a class=" btn btn-primary" role="button" asp-controller="LoginModels" asp-action="Index">
                            <span class="glyphicon glyphicon-log-in"></span>
                            <h3>Login</h3>
                        </a>
                        <a href="#">
                            <span class="glyphicon glyphicon-log-out"></span>
                            <h3>Logout</h3>
                        </a>
                    </div>

                </aside>
            </div>
            <div class="col-sm-10">
               
                @RenderBody()
                
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false);
</body>
</html>
