@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', 'sans-serif';
        }

        .bg-animation {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(270deg, #ff7e5f, #feb47b);
            background-size: 400% 400%;
            animation: gradientAnimation 15s ease infinite;
            z-index: -1;
        }
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: transparent; /* Deixe transparente para mostrar a animação */
            margin: 0;
        }

        .login-container {
            position: relative;
            z-index: 1;
            background-color: rgba(255, 255, 255, 0.9); /* Fundo semi-transparente */
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .login-container h2 {
            margin-bottom: 1.5rem;
            color: #333333;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 20px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-register {
            background-color: #FFFFFF;
            border-color: #FFFFFF;
            border-radius: 20px;
            margin-top: 1rem;
        }

        .btn-register:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            color: #FFFFFF;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-check {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-check-input {
            margin-right: 0.5rem;
        }

        .text-danger {
            color: #FF4500;
        }

        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            border: 0;
        }

    </style>
</head>
<body>
    <div class="bg-animation"></div>
    <div class="login-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="sr-only"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="sr-only"></label>
                <input asp-for="Password" class="form-control" placeholder="Senha" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Lembrar de mim</label>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <br />
        <a href="@Url.Action("Register", "Account")" class="btn btn-register btn-block">Registrar-se</a>
    </div>
</body>
</html>
